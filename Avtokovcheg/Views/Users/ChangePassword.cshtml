@model ChangePasswordViewModel

@{
    ViewBag.Title = "Изменение пароля";
}

<h2>Изменение пароля для пользователя @Model.PhoneNamber</h2>

<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="PhoneNamber" />
    <div class="col-md-4">
        <label asp-for="NewPassword" class="form-label">Новый пароль</label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>