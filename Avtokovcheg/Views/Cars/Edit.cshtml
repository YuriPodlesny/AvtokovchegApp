@model EditCarViewModel

@{
    ViewBag.Title = "Изменить данные об автомобиле";
}

<form asp-controller="Cars" asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <div class="col-md-4">
        <label asp-for="CarBrand" class="form-label"></label>
        <input asp-for="CarBrand" class="form-control" />
        <span asp-validation-for="CarBrand" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="CarModel" class="form-label"></label>
        <input asp-for="CarModel" class="form-control" />
        <span asp-validation-for="CarModel" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Namber" class="form-label"></label>
        <input asp-for="Namber" class="form-control" />
        <span asp-validation-for="Namber" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="HolderName" class="form-label"></label>
        <input asp-for="HolderName" class="form-control" />
        <span asp-validation-for="HolderName" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="HolderSurname" class="form-label"></label>
        <input asp-for="HolderSurname" class="form-control" />
        <span asp-validation-for="HolderSurname" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="HolderPatronymic" class="form-label"></label>
        <input asp-for="HolderPatronymic" class="form-control" />
        <span asp-validation-for="HolderPatronymic" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>