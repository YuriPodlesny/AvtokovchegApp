@model ChangeStatusParkingSpaceViewModel

@{
    ViewBag.Title = "Изменить статус парковочного места";
}

<form asp-controller="ParkingSpace" asp-action="ChangeStatus" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Namber" value="@Model.Namber" />
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" asp-for=IsFree>
        <label class="form-check-label" asp-for="IsFree"></label>
    </div>
    <div class="mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
